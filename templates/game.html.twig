{% extends "base.html.twig" %}

{% block title %}Index{% endblock %}
{% block head %}
    {{ parent() }}
    <style type="text/css">
        .important {
            color: #336699;
        }
    </style>
{% endblock %}

{% block content %}
    <pre>
        {{ message }}

        <table>
            {% for rows, cols in game %}
                <tr>
                    {% for col in cols %}
                        <td>{{ col }}</td>
                    {% endfor %}
                </tr>
            {% endfor %}
        </table>

        {{ messageWin }}
    </pre>

    <form method="post" action="./post">
        Enter coordinates (row, col), e.g. A5 <input name="pos" type="text" size="2" maxlength="2"/>
        <input type="submit" value="Submit">
    </form>

    <form method="post" action="./reset">
        <input type="submit" value="Reset Game">
    </form>

{% endblock %}


